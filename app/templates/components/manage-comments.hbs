<br>
<h2>Readers' Comments </h2>
{{#each commentsModel as |oneComment|}}
  <li>  {{oneComment.statement}} </li>
{{/each}}
<br>
<div class="ui button" {{action 'openModal'}}>
  Add Comment
</div>

{{#ui-modal name="newComment" class="newComment" }}
  <div class="header">
    Adding comment
  </div>
  <div class="content">
    <div class="ui form">
      <div class="field">
        <label>Text</label>
        {{input type="text" value = statement}}
      </div>
    </div>
  </div>
  <br>

  <div class="actions">

    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>

  </div>
{{/ui-modal}}
<br><br><br>

